<%= render "shared/second-header"%>
<div class="dictionaries-new-page">
  <div class="dictionary-main">
    <h2 class="dictionary-title">辞書を編集しよう！</h2>
    <%= form_with model: @dictionary, local: true do |f| %>
    
    <%= render 'shared/error_messages', model: f.object %>

    <div class="new-dictionaries">
      <div class="weight-bold-text">
        タイトル
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :name, class:"dictionaries-text", id:"dictionary-name", placeholder:"辞書のタイトル名（必須 40文字まで)", maxlength:"40" %>
      <div class="weight-bold-text">
        内容の説明
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :info, class:"dictionary-text", id:"dictionary-info", placeholder:"内容の説明（必須 100文字まで）（学科、試験名、資格名、用途）例）2021年ITスキル検定1級受験用に作成しました。追記要望や内容相違点についてお気づきの点がありましたら、是非コメントをお願いいたします。", rows: "7", cols: "75", maxlength:"100" %>
    </div>
    <div class="dictionaries-detail">
        <div class="form">
          <div class="weight-bold-text">
            カテゴリー
            <span class="indispensable">必須</span>
          </div>
          <%= f.collection_select(:category_id, Category.all, :id, :category, {}, {class:"select-box", id:"dictionary-category"}) %>
        </div>
    </div>
      <% if user_signed_in? %>
        <div class="dictionary-edt-btn">
          <%= f.submit "変更する",class:"dictionary--btn" %>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>  